	<section>
		<div class="latest-news">
			<div class="container">
				<div class="latest-news-content">
					<div class="row">
						<div class="col-md-12">
							<div class="section-heading">
								<div class="icon">
									<i class="fa fa-file"></i>
								</div>
								<div class="text-content">
									<h2>Novosti</h2>
									<span>iz sveta električnih bicikli</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="container">
				<div class="row">
        {% set Posts = fetch("Post") %}
        {% for Post in Posts %}
					<div class="col-md-4">
						<div class="item wow fadeIn" data-wow-duration="0.75s">
					 		<div class="thumb-content">
								<div class="date-post">
									<a href="post/{{Post.Slug}}">{{Post.Date|date("m.d.Y")}}</a>
								</div>
								<div class="thumb-inner">
									<a href="post/{{Post.Slug}}"><img src="img/{{Post.Image}}" alt="{{Post.Title}}"></a>
								</div>
							</div>
							<div class="down-content">
								<a href="single_car.html"><h4>{{Post.Title}}</h4></a>
								{#<span>Posted by: <em>Admin</em></span> #}
								<p>{{Post.Short}}</p>	
								<div class="text-button">
									<a href="post/{{Post.Slug}}">Nastavak <i class="fa fa-arrow-right"></i></a>
								</div>							
							</div>
					  	</div>
					</div>
          {% endfor %}

				</div>
			</div>
		</div>
	</section>



	<section>
		<div class="recent-cars">
			<div class="container">
				<div class="recent-car-content">
					<div class="row">
						<div class="col-md-12">
							<div class="section-heading">
								<div class="icon">
									<i class="fa fa-car"></i>
								</div>
								<div class="text-content">
									<h2>Najnovija bicikla</h2>
									<span>iz naše ponude</span>
								</div>
							</div>
						</div>
					</div>
					<div class="row">

            {% set Cars = fetch("Cars") %}
            {% for Car in Cars %}          
						<div class="col-md-4 col-sm-6">
							<div class="car-item wow fadeIn" data-wow-duration="0.75s">
								<div class="thumb-content">
									<div class="car-banner">
										<a href="bike/{{Car.id}}">Prodaja</a>
									</div>
									<div class="thumb-inner">
										<a href="bike/{{Car.id}}"><img src="img/{{Car.Galerija_[0].slug}}" alt="{{Car.Model}}"></a>
									</div>
								</div>
								<div class="down-content">
									<a href="bike/{{Car.id}}"><h4>{{Car.Marka}} {{Car.Model}}</h4></a>
									<span>{{ Car.Cena|number_format(0) }} eur</span>
									<p style="white-space: pre-wrap;">{{Car.Opis}}</p>
									<ul class="car-info">
										<li><div class="item"><i class="flaticon flaticon-calendar"></i><p>{{ Car.Godiste }}</p></div></li>
										<li><div class="item"><i class="flaticon flaticon-speed"></i><p>{{ Car.MaxSpeed }} km/h</p></div></li>
										<li><div class="item"><i class="flaticon flaticon-road"></i><p>{{ Car.Kilometraza }} km</p></div></li>
										<li><div class="item"><i class="flaticon flaticon-fuel"></i><p>{{ Car.KW }} W</p></div></li>
									</ul>
								</div>
							</div>
						</div>
            {% endfor %}

					</div>
				</div>
			</div>
		</div>
	</section>

